@model Protótipo_Projeto.Models.Produto

<h1>Adicionar produto</h1>

<div>
    <form asp-action="Adicionar">
        <label asp-for="Nome">Insira o nome do produto:</label>
        <input asp-for="Nome"></input>

        <label asp-for="ValorUnitario">Insira o valor unitário do produto:</label>
        <input asp-for="ValorUnitario"></input>

        <label asp-for="Estoque">Insira o estoque do produto:</label>
        <input asp-for="Estoque"></input>

        <label asp-for="Categoria.Id">Insira a categoria do produto:</label>
        <select asp-for="Categoria.Id" asp-items="@ViewBag.categorias"></select>

        <button asp-action="Adicionar" class="btn btn-primary mt-3">Adicionar</button>
    </form>
</div>