@using ProjetoE21.Dados

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoE21</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoE21.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Aside.css" />
    <link rel="stylesheet" href="~/css/Login.css" />

    <style>
        .asd {
            display: none;
        }

        .asdEnter {
            animation: AsideEnter 0.25s ease-in;
        }

        .asd-item {
        }

            .asd-item:hover {
                background-color: rgba(0, 0, 0, 0.25);
                cursor: pointer;
            }

        .dark-mode2 {
            filter: invert(80%);
        }
    </style>
</head>

<body style="background-color:rgb(246, 245, 252);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid" style="height: 3rem">
                <a style="width: 20%; margin-right: 8px; display: flex; align-items: center" asp-controller="Perfil" asp-action="Index">
                    <img src="~/css/Imagens/Perfil.png" width="20%" class="m-1"></img>
                    <p style="margin-top: 1rem">
                        @if (Usuario.LogadoE == null)
                        {
                            @Usuario.LogadoJ.Nome
                            ;

                        }
                        else
                        {
                            @Usuario.LogadoE.Nome
                            ;
                        }
                    </p>
                </a>
                <a class="navbar-brand d-flex" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 32px; font-family: Arial; margin-top: 4px">
                    <p id="oppor" style="color: #7CDFE5">Oppor</p>
                    <p id="teen" style="color: #A378FF">teen</p>
                    <p id="ity" style="color: #E21EAD">ity</p>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">




                        @if (Usuario.LogadoE == null)
                        {


                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Serviços" asp-action="Index">Serviços</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Empregos" asp-action="Index">Empregos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pesquisar" asp-action="Index">Jovens</a>
                            </li>
                        }

                    </ul>
                    <div class="d-flex me-5 mt-0">
                        <button onclick="aside()" class="btn btn-secondary w-100" type="button" id="config">
                            Configurações
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container d-flex justify-content-center" style="min-height: 100vh;min-width:98vw; padding-top: 56px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        if (localStorage.getItem("dm") == "yes") {
            document.getElementsByTagName("html")[0].classList.add("dark-mode2");
            document.getElementById("oppor").style.color = "#cda6a3";
            document.getElementById("teen").style.color = "#becf99";
            document.getElementById("ity").style.color = "#a5f3ba";
        }

        if (!localStorage.getItem("dm")) {
            localStorage.setItem("dm", "no");
            document.getElementById("oppor").style.color = "#7CDFE5";
            document.getElementById("teen").style.color = "#A378FF";
            document.getElementById("ity").style.color = "#E21EAD";
        }

        function darkMode() {
            document.getElementsByTagName("html")[0].classList.add("dark-mode2");
            document.getElementById("oppor").style.color = "#cda6a3";
            document.getElementById("teen").style.color = "#becf99";
            document.getElementById("ity").style.color = "#a5f3ba";
            document.getElementById("dm").innerHTML = "Light mode";
            document.getElementById("dm").onclick = "lightMode()";
            localStorage.setItem("dm", "yes");

            asideRemove();
        }

        function lightMode() {
            document.getElementsByTagName("html")[0].classList.remove("dark-mode2");
            document.getElementById("oppor").style.color = "#7CDFE5";
            document.getElementById("teen").style.color = "#A378FF";
            document.getElementById("ity").style.color = "#E21EAD";
            document.getElementById("dm").innerHTML = "Dark mode";
            document.getElementById("dm").onclick = "darkMode()";
            localStorage.setItem("dm", "no");

            asideRemove();
        }

        function aside() {
            if (localStorage.getItem("dm") == "no") {
                document.getElementById("config").insertAdjacentHTML("afterend", `<aside class="asdEnter position-absolute end-0 bg-light rounded p-2 mt-0" style="height: 98vh; width:25%; box-shadow: -10px 10px 15px -4px rgba(0,0,0,0.75);" id="aside">
                                                                                                                                     <div class="rounded w-100 asd-item p-2" onclick="asideRemove()">X</div>
                                                                                                                                     <div class="rounded w-100 asd-item p-2" id="dm" onclick="darkMode()">Dark mode</div>
                                                                                                                                     <div class="rounded w-100 asd-item p-2">Minha conta</div>
                                                                                                                                     <div class="rounded w-100 asd-item p-2 position-absolute" style="bottom: 16px">Sair da conta</div>
                                                                                                                              </aside>`);
            } else {
                document.getElementById("config").insertAdjacentHTML("afterend", `<aside class="asdEnter position-absolute end-0 bg-light rounded p-2 mt-0" style="height: 98vh; width:25%; box-shadow: -10px 10px 15px -4px rgba(0,0,0,0.75);" id="aside">
                                                                                                                                             <div class="rounded w-100 asd-item p-2" onclick="asideRemove()">X</div>
                                                                                                                                             <div class="rounded w-100 asd-item p-2" id="dm" onclick="lightMode()">Light mode</div>
                                                                                                                                             <div class="rounded w-100 asd-item p-2">Minha conta</div>
                                                                                                                                             <div class="rounded w-100 asd-item p-2 position-absolute" style="bottom: 16px">Sair da conta</div>
                                                                                                                                      </aside>`);
            }
        }

        function asideRemove() {
            document.getElementById("aside").remove("asd");
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


