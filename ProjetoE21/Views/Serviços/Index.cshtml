
@model IEnumerable<ProjetoE21.Models.Servico>
<div>
    <h1>Meus serviços</h1>

    <p>
        <a asp-action="Adicionar">Adicionar serviço</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descrição</th>
                <th>Empresa</th>
                <th>Pagamento</th>
                <th>Dia</th>
                <th>Hora</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => i.Id)</td>
                    <td>@Html.DisplayFor(model => i.Descricao)</td>
                    <td>@Html.DisplayFor(model => i.EmpresaS.Nome)</td>
                    <td>@Html.DisplayFor(model => i.Pagamento)</td>
                    <td>@Html.DisplayFor(model => i.Dia)</td>
                    <td>@Html.DisplayFor(model => i.Hora)</td>
                    <td>
                        @Html.ActionLink("Details", "Details",  new {Id = i.Id}) |
                        @Html.ActionLink("Edit", "Edit",  new {Id = i.Id}) |
                        @Html.ActionLink("Delete", "Delete",  new {Id = i.Id})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>