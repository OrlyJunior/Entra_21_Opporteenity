@model ProjetoE21.Models.Servico

<h1>Adicionar serviço</h1>

<form asp-action="Adicionar">
    <div>
        <label asp-for="Descricao">Insira a descrição do serviço:</label>
        <input asp-for="Descricao"></input>
    </div>
    <div>
        <label asp-for="Local.Estado">Insira o estado do local serviço:</label>
        <input asp-for="Local.Estado"></input>
    </div>
    <div>
        <label asp-for="Local.Cidade">Insira a cidade do serviço:</label>
        <input asp-for="Local.Cidade"></input>
    </div>
    <div>
        <label asp-for="Local.Bairro">Insira o bairro do serviço:</label>
        <input asp-for="Local.Bairro"></input>
    </div>
    <div>
        <label asp-for="Local.Rua">Insira a rua do serviço:</label>
        <input asp-for="Local.Rua"></input>
    </div>
    <div>
        <label asp-for="Local.Numero">Insira o número do local do serviço:</label>
        <input asp-for="Local.Numero"></input>
    </div>
    <div>
        <label asp-for="Pagamento">Insira o valor a ser pago pelo serviço:</label>
        <input asp-for="Pagamento"></input>
    </div>
    <div>
        <label asp-for="Horario">Insira o dia e hora do serviço:</label>
        <input asp-for="Horario"></input>
    </div>

    <button asp-action="Adicionar">Adicionar</button>
</form>