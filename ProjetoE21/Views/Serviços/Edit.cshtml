@model ProjetoE21.Models.Servico

<h1>Editar serviço</h1>

<form asp-action="Edit">
    <div>
        <label asp-for="Descricao">Insira a nova descrição do serviço:</label>
        <input asp-for="Descricao"></input>
    </div>
    <div>
        <label asp-for="Local.Estado">Insira o novo estado do local serviço:</label>
        <input asp-for="Local.Estado"></input>
    </div>
    <div>
        <label asp-for="Local.Cidade">Insira a nova cidade do serviço:</label>
        <input asp-for="Local.Cidade"></input>
    </div>
    <div>
        <label asp-for="Local.Bairro">Insira o novo bairro do serviço:</label>
        <input asp-for="Local.Bairro"></input>
    </div>
    <div>
        <label asp-for="Local.Rua">Insira a nova rua do serviço:</label>
        <input asp-for="Local.Rua"></input>
    </div>
    <div>
        <label asp-for="Local.Numero">Insira o novo número do local do serviço:</label>
        <input asp-for="Local.Numero"></input>
    </div>
    <div>
        <label asp-for="Pagamento">Insira o novo valor a ser pago pelo serviço:</label>
        <input asp-for="Pagamento"></input>
    </div>
    <div>
        <label asp-for="Horario">Insira o novo dia e hora do serviço:</label>
        <input asp-for="Horario"></input>
    </div>

    <button asp-action="Edit">Editar</button>
</form>