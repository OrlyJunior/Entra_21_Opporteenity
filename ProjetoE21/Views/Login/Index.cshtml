            background-color: transparent;
        }

        #h1doligin {
            text-shadow: 2px 2px 4px black;
            color: white;
            font-size: 4.5vw;
            font-weight: 500;
        }

        #divdosbotoesdelogin {
            justify-content: center;
            margin: auto;
            display: flex;
            flex-wrap: nowrap;
            padding: 20px;
            width: 90%;
            height: 2vh;
            justify-content: space-around;
        }

        #jbtn,
        #ebtn {
            margin: 2vh 1vw 2vh 1vw;
            text-decoration: none;
            margin-top: 3vh;
            padding: 2vh 5vw 5vh 5vw;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
        }

        #jbtn {
            color: #A378FF;
            border: 1px solid #A378FF;
        }

        #ebtn {
            color: #7CDFE5;
            border: 1px solid #7CDFE5;
        }

        #h1donaotemcadastro {
            text-shadow: 2px 2px 4px black;
            color: white;
            font-size: 4vw;
            font-weight: 500;
            margin-top: 15vh;
            margin-bottom: 25px;
        }

        #cbtn {
            text-decoration: none;
            color: #e21ead;
            margin: 20px auto auto auto;
            padding: 10px;
            border: 1px solid #e21ead;
            border-radius: 4px;
            cursor: pointer;
            width: 90%;
        }
    }

</style>
