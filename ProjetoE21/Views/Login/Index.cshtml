            left: 0;
            width: 100vw;
            height: 100vh;
            margin: 0;
            padding: 0;
        }

        #containerlogin {
            padding: 2px;
            z-index: 1;
            overflow-x: hidden;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        #divoportunit {
            width: 80%;
            height: 30vh;
            margin: 5vh auto auto auto;
            text-shadow: 2px 2px 2px black;
            background-color: transparent;
        }

        #divtextooportunit {
            font-size: 13vw;
            font-family: Arial, sans-serif;
            position: relative;
            justify-content: start;
        }

        #paragrafoteen {
            margin-bottom: 4px;
            position: absolute;
        }

        #paragrafoteenrosa {
            position: absolute;
            margin-left: 2.779em;
            color: #A378FF;
            z-index: 1;
        }

        #paragrafou {
            text-shadow: -2px -2px 0px black;
            margin-left: 2.22em;
        }

        #divlogin {
