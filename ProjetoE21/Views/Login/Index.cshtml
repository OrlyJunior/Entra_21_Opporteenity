@{
    Layout = null;

}

@model ProjetoE21.Models.Jovem

<head>
    <link rel="stylesheet" href="~/css/keyframe.css" />
    <link rel="stylesheet" href="css/site.css" />
</head>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/keyframe.css" />
    <link rel="stylesheet" href="css/site.css" />
</head>
<style>
    .scroll-animationrtl {
        display: flex !important;
        flex-direction: row-reverse;
        animation: move-right 1.5s ease-in;
    }

    .scroll-animationltr {
        display: flex !important;
        flex-direction: row;
        animation: move-left 1.5s ease-in;
    }

    #jbtn:hover {
        background-color: #A378FF;
        color: white !important;
    }

    #ebtn:hover {
        background-color: #7CDFE5;
        color: white !important;
    }

    #cbtn:hover {
        background-color: #e21ead;
        color: white !important;
    }

    #bodylogin {
        background-color: rgb(228, 218, 228);
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    #divimagem {
        overflow-x: hidden;
        font-family: Arial, sans-serif;
        background-color: transparent;
        overflow: auto;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100%;
        margin: 0;
        padding: 0;
    }

    #containerlogin {
        padding: 2px;
        z-index: 1;
        overflow-x: hidden;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    #divoportunit {
        width: 33%;
        height: 30vh;
        margin-left: 10%;
        text-shadow: 2px 2px 2px black;
        background-color: transparent;
        margin-top: 20vh;
    }

    #divtextooportunit {
        font-size: 6vw;
        font-family: Arial, sans-serif;
        position: relative;
        justify-content: start;
    }

    #paragrafoteen {
        margin-bottom: 4px;
        position: absolute;
    }

    #paragrafoteenrosa {
        position: absolute;
        margin-left: 2.78em;
        color: #A378FF;
        z-index: 1;
    }

    #paragrafou {
        text-shadow: -2px -2px 0px black;
        margin-left: 0.7em;
    }

    #divlogin {
        display: flex;
        flex-direction: column;
        border-radius: 10px;
        width: 33vw;
        height: 80vh;
        padding-right: 5vw;
        margin-right: 5vw;
        margin-top: 4vh;
        text-align: center;
        background-color: transparent;
    }

    #h1doligin {
        text-shadow: 2px 2px 4px black;
        color: white;
        font-size: 2.5vw;
        font-weight: 500;
    }

    #divdosbotoesdelogin {
        display: flex;
        flex-wrap: nowrap;
        padding: 20px;
        width: 90%;
        height: 2vh;
        justify-content: space-around;
    }

    #jbtn,
    #ebtn {
        margin: 2vh 1vw 2vh 1vw;
        text-decoration: none;
        margin-top: 3vh;
        padding: 2vh 5vw 5vh 5vw;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }

    #jbtn {
        color: #A378FF;
        border: 1px solid #A378FF;
    }

    #ebtn {
        color: #7CDFE5;
        border: 1px solid #7CDFE5;
    }

    #h1donaotemcadastro {
        font-size: 2.5vw;
        color: white;
        margin-top: 15vh;
        margin-bottom: 25px;
    }

    #cbtn {
        text-decoration: none;
        color: #e21ead;
        margin: 20px auto auto auto;
        padding: 10px;
        border: 1px solid #e21ead;
        border-radius: 4px;
        cursor: pointer;
        width: 90%;
    }

    #divdosobrenos {
        width: 100vw;
        background-color: darkslategray;
        text-align: center;
        font-family: Arial;
        margin-top: -10px;
    }

    #h1dosobrenos {
        width: 100vw;
        font-size: 10vw;
        font-weight: 400;
        margin: auto;
    }

    #constainertextos {
        margin: auto;
        font-family: Arial, sans-serif;
    }

    #missao {
        width: 100vw;
        display: none;
        font-size: 2vw;
        margin: auto;
        justify-content: space-between;
        background-color: #7CDFE5;
        box-shadow: 1px 5px 5px black
    }

    #visao {
        width: 100vw;
        display: none;
        font-size: 2vw;
        margin: auto;
        justify-content: space-between;
        background-color: #A378FF;
        box-shadow: inset 0px 9px 28px -8px rgba(0,0,0,0.75);
    }

    #valores {
        width: 100vw;
        display: none;
        font-size: 2vw;
        margin: auto;
        justify-content: space-between;
        background-color: #e21ead;
        box-shadow: inset 0px 9px 28px -8px rgba(0,0,0,0.75);
    }

    #imgmissao,
    #imgvisao,
    #imgvalores {
        margin: auto;
        width: 33%;
        height: 33%;
    }

    #containertextomissao,
    #containertextovisao,
    #containertextovalores {
        padding: 2vw;
        text-align: center;
        letter-spacing: 0.3vw;
    }

    #rodape {
        display: none;
        margin: auto;
        width: 100vw;
        height: 12vh;
        justify-content: center;
        justify-content: space-around;
        background-color: darkslategrey;
    }

    #fbdiv,
    #instadiv,
    #githubdiv {
        margin: auto;
        width: 3vw;
        height: 3vw;
    }

    #githubdiv {
        margin: auto 40% auto auto;
    }

    #fbdiv {
        margin: auto auto auto 40%;
    }

    #githubdiv {
        margin: auto 40% auto auto;
    }

    #fbimg,
    #instaimg,
    #githubimg {
        margin: auto;
        width: 100%;
        height: 100%;
    }

    @@media only all and (max-width: 600px) {
        #bodylogin {
        }

        #divimagem {
            overflow-x: hidden;
            font-family: Arial, sans-serif;
            background-color: transparent;
