@{
    Layout = null;

}

@model ProjetoE21.Models.Jovem

<head>
    <link rel="stylesheet" href="~/css/keyframe.css" />
    <link rel="stylesheet" href="css/site.css" />
</head>
<style>
    .scroll-animationrtl {
        display: flex !important;
        flex-direction: row-reverse;
        animation: move-right 1.5s ease-in;
    }

    .scroll-animationltr {
        display: flex !important;
        flex-direction: row;
        animation: move-left 1.5s ease-in;
    }
</style>
<body style="overflow-x:hidden;">
    <div class="background-div" style="overflow-x: hidden; font-family: Arial, sans-serif; background-color: transparent; overflow: auto; top: 0; left: 0; width: 100%; height: 100%; margin: 0; padding: 0;">

        <div style="z-index:1; overflow-x: hidden; display:flex; flex-direction: row; justify-content: space-between;">
            <div style="  margin-left:10vw; text-shadow:2px 2px 2px black; background-color: transparent; margin-top:20vh; ">
                <div class="container" style="font-size:5em; font-family: Arial, sans-serif; position: relative; justify-content: start;">
                    <p class="paragrafo">Opport</p>
                    <p class="teen" style="margin-bottom: 4px; position: absolute;">ee</p>
                    <p class="teenrosa" style="position: absolute; margin-left: 2.78em; color: #A378FF; z-index: 1;">tee</p>
                    <p class="u" style="text-shadow:-2px -2px 0px black;margin-left: 56px;">u</p>
                    <p class="final-logo">nity</p>
                </div>
            </div>

            <div style="display:flex;flex-direction:column; border-radius:10px; width:33vw; height:80vh; padding:5px; margin-top:4vh; text-align: center; background-color:rgba(0, 0, 0, 0.229) ;">
                <h1 style="text-shadow: 2px 2px 4px black; color:white; font-size:2.5em; font-weight:500;"> Conectando Jovens e Empresas</h1>

                <div style="padding: 20px; width: 90%; height:2vh; justify-content:space-around;">

                    @*           <a onclick="Jlogindash()" style="text-decoration:none; color: red; margin-top:30px;margin-right:10px; padding: 10px; border:1px solid green; border-radius: 4px; cursor: pointer; width: 100%;">Sou aprendiz</a> *@

                    <a asp-controller="Home" asp-action="LoginJovem" type="submit" style="text-decoration:none; color: green; margin-top:30px;margin-right:10px; padding: 10px; border:1px solid green; border-radius: 4px; cursor: pointer; width: 100%;">Sou aprendiz</a>

                    <a asp-controller="Home" asp-action="LoginEmpresa" type="submit" style="text-decoration:none;  color: cornflowerblue; margin-top:30px;margin-left:5px; padding: 10px; border:1px solid cornflowerblue; border-radius: 4px; cursor: pointer; width: 100%;">Sou empresa</a>
                </div>
                <h2 style="color:white;  margin-top:50px; margin-bottom:25px;">Ainda nao tem cadastro?</h2>

                <a style="text-decoration:none;  color: #e21ead ; margin-top:50px; margin-left:5px; padding: 10px; border:1px solid #e21ead; border-radius: 4px; cursor: pointer; width: 100%;" class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Confirmar">Cadastrar</a>

            </div>

            <div id="Jlogin" style=" display:none;  border-radius:10px; width:49vw; height:90vh; margin-left: 49vw; text-align: center; background-color:white ;">
                <div style=" display: flex; justify-content: flex-end;"> <button onclick="Jlogindashclose()">X</button> </div>

                <form asp-action="LoginEmpresa" style="padding: 10%; display: flex; flex-direction: column; font-family: Arial, Helvetica, sans-serif;">
                    <h1 style="font-size:6vh; color: rgb(11, 138, 11); margin-top: 10vh; margin-bottom: 20vh;">Login Empresa</h1>


                    @* <lable>Insira seu email:</lable> *@
                    <input style=" margin-bottom: 20px; height: 6vh;" asp-for="Email" class="input" placeholder="Email" type="text">
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Email)</span>
                    @* <lable>Insira sua senha:</lable> *@
                    <input style=" margin-bottom: 20px; height: 6vh;" asp-for="Senha" class="input" placeholder="Senha" type="password">
                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Senha)</span>

                    <button style="font-size: large; font-weight: 400; color: white; background-color: rgb(11, 138, 11); margin: auto; width: 20vw;border-radius: 30px; margin-bottom: 20px; height: 6vh;" class="button-confirm">Login</button>

                </form>
            </div>
        </div>
