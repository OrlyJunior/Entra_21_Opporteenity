</div>

<script>
    window.onload = function () { 
          nivelidioma("intervalo1", "valor1"); 
          nivelidioma("intervalo2", "valor2");
          nivelidioma("intervalo3", "valor3");
    };

    function nivelidioma(intervalo, valor) {
      var valorOutput = document.getElementById(valor);
      var intervaloInput = document.getElementById(intervalo);

      valorOutput.innerText = "";

          if (intervaloInput.value > 0 && intervaloInput.value < 17){
              valorOutput.innerText = "A1";
          }
          else if(intervaloInput.value >= 17 && intervaloInput.value < 33){
              valorOutput.innerText = "A2";
          }
          else if(intervaloInput.value >= 33 && intervaloInput.value < 49){
              valorOutput.innerText =  "B1";
          }
          else if(intervaloInput.value >= 49 && intervaloInput.value < 65){
              valorOutput.innerText =  "B2";
          }
          else if(intervaloInput.value >= 65 && intervaloInput.value < 81){
              valorOutput.innerText = "C1";
          }
          else if(intervaloInput.value >= 81){
              valorOutput.innerText = "C2";
          }
      }
</script>



