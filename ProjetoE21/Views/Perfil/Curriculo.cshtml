                            <input asp-for="NivelIdioma2" type="range" value="@Model.NivelIdioma2" id="intervalo2" min="0" max="100" onload="nivelidioma('intervalo2', 'valor2')" oninput="nivelidioma('intervalo2', 'valor2')">
