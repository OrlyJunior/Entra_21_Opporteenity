@using ProjetoE21.Dados;

<h1>Perfil</h1>

<h3>@Usuario.logado.Nome</h3>
<p>Data de nascimento: @Usuario.logado.DataNascimento.Day/@Usuario.logado.DataNascimento.Month/@Usuario.logado.DataNascimento.Year</p>
<p>Telefone: @Usuario.logado.Telefone</p>
<p>Email: @Usuario.logado.Email</p>

<h1>Responsável</h1>

<p>Nome do responsável: @Usuario.logado.Responsavel</p>
<p>Telefone do responsável: @Usuario.logado.FoneResponsavel</p>

<div class="d-flex">
        <a asp-controller="Perfil" asp-action="Editar" class="btn btn-warning me-2">Editar</a>
        <a asp-controller="Perfil" asp-action="Deslogar" class="btn btn-danger">Deslogar</a>
</div>
<div>
    <h1>curriculo</h1>

    <div>
        <form style="display: flex; flex-direction: column; border: 1px solid black; text-align: center;">
            <h2>Dados pessoais</h2>
            <input id="Curriculo-nome" placeholder="Nome">
            <input id="Curriculo-endereço" placeholder="endereço">
            <input id="Curriculo-telefone" placeholder="telefone">
            <input id="Curriculo-email" placeholder="email">
            <input id="Curriculo-redesocial" placeholder="rede social">
            <h2>Objetivo</h2>
            <input id="Curriculo-objetivo" placeholder="objetivo">
            <h2>Escolaridade</h2>
            <input id="Curriculo-escola" placeholder="escola">
            <input id="Curriculo-idiomas" placeholder="idiomas">

            <input id="Curriculo-cursos" placeholder="cursos">
            <h2>Experiencias</h2>
            <input id="Curriculo-experiencia" placeholder="experiencia">

            <input type="submit">

        </form>
    </div>
</div>