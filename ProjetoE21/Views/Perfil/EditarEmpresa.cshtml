@model ProjetoE21.Models.Empresa

<h1>Edite seu perfil</h1>

<form asp-action="EditarEmpresa">
    <div>
        <label asp-for="Nome">Edite o nome da empresa:</label>
        <input asp-for="Nome"></input>
    </div>
    <div>
        <label asp-for="Email">Edite o endereço de email da empresa:</label>
        <input asp-for="Email"></input>
    </div>
    <div>
        <label asp-for="Senha">Edite a senha:</label>
        <input asp-for="Senha"></input>
    </div>
    <div>
        <label asp-for="Telefone">Edite o fone da empresa:</label>
        <input asp-for="Telefone"></input>
    </div>
    <div>
        <label asp-for="Local.Estado">Edite o estado de sua empresa:</label>
        <input asp-for="Local.Estado"></input>
    </div>
    <div>
        <label asp-for="Local.Cidade">Edite a cidade de sua empresa:</label>
        <input asp-for="Local.Cidade"></input>
    </div>
    <div>
        <label asp-for="Local.Bairro">Edite o bairro de sua empresa:</label>
        <input asp-for="Local.Bairro"></input>
    </div>
    <div>
        <label asp-for="Local.Rua">Edite a rua de sua empresa:</label>
        <input asp-for="Local.Rua"></input>
    </div>
    <div>
        <label asp-for="Local.Numero">Edite o número do local de sua empresa:</label>
        <input asp-for="Local.Numero"></input>
    </div>
    <div>
        <label asp-for="Cnpj">Edite sua data de nascimento:</label>
        <input asp-for="Cnpj"></input>
    </div>

    <button asp-action="EditarEmpresa" class="btn btn-warning">Editar</button>
</form>